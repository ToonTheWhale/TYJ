<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/pokémon.css" />
    <title>TYJ-Pokémons</title>
  </head>
  <body>
    <nav>
      <section class="nav-section">
        <button class="hamburger" id="hamburger">
          <img
            src="/images/icons8-hamburger-menu-50.png"
            alt=""
            class="hamburger-icon"
          />
        </button>
        <section class="dropdown" id="dropdown">
          <a href="/home"><img src="/images/Logo.png" alt="" /></a>
          <a href="/vechten">Vechten</a>
          <a href="/vergelijken">Vergelijken</a>
          <img
            src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/132.png"
            alt="CuPo"
            class="current-pokemon"
          />
          <a href="/login" class="login"
            >Login
            <img src="/images/Default_pfp.svg.png" alt="PFP" class="pfp-nav"
          /></a>
        </section>
      </section>
    </nav>
  </body>
  <script>
    // script dient voor de dropdown nav
    const hamburger = document.querySelector(".hamburger");
    const dropdown = document.querySelector(".dropdown");

    console.log(hamburger + " " + dropdown);

    hamburger.addEventListener("click", () => {
      dropdown.classList.toggle("open");
    });
  </script>
</html>
