<%- include('partials/headerLogin'); %>
<body>
  <main style="margin: auto;">
    <section class="main_login">
      <h2>Inloggen</h2>
      <br />
      <form action="/login" method="post" class="login">
        <label for="username:"> E-mailadres </label>
        <input
          class="input"
          type="text"
          id="username"
          name="username"
          required
        />
        <br />
        <label for="password"> wachtwoord </label>
        <input
          class="input"
          type="password"
          id="password"
          name="password"
          required
        />
        <br />
        <input class="submit" type="submit" value="Login" />
      </form>
      <br />
      <div>Nog geen account?<a href="/signup"> Registreren</a></div>
    </section>
  </main>
  <% if (message) { %>
    <div
      id="overlay-message-CurrentPokemon"
      style="display: block"
      class="overlay"
    >
      <dialog
        id="popup-message-CurrentPokemon"
        style="display: block"
        class="popup"
      >
        <h2><%= message %></h2>
        <button
          style="float: right"
          onclick="closePopupMessageCurrentPokemon()"
          id="button"
        >
          Close
        </button>
      </dialog>
    </div>
    <% } %> 
</body>
<%- include('partials/footerLogin'); %>
