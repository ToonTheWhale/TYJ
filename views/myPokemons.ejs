<%- include('partials/header'); %>
<main
  class="main-mypokemon"
  style="width: 80%; margin: auto; margin-bottom: 50px"
>
  <h1>Jouw pokemon</h1>
  <section class="section-mypokemon">
    <% for(let pokemon of playerPokemons) { %>
    <article class="pokemon-mypokemon">
      <p><strong><%= pokemon.name %></strong></p>
      <% if (pokemon.nickname) { %>
      <p><strong><%= pokemon.nickname %></strong></p>
      <% } %>
      <img src="<%= pokemon.image %>" alt="img" />
      <% for (let element of pokemon.types) { %>
      <div class="type-icon type-<%= element %>" href=""><%= element %></div>
      <% } %>
      <p><%= pokemon.maxHP %> <strong>HP</strong></p>
      <button
        class="button-mypokemon"
        formmethod="post"
        formaction="/player/pokemon/delete/<%=pokemon.teamId%>"
      >
        <img
          src="/images/green_ball_by_ace_zeroartic_df6cd1c-414w-2x.png"
          alt=""
          class="green-ball"
        />
      </button>
    </article>
    <% } %>
  </section>
</main>
<%- include('partials/footer'); %>
