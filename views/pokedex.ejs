<%- include('partials/header'); %>
<main class="pokedex-main">
  <section class="sort-pokemon" >
  <input type="text" id="pokemonFilter" placeholder="Zoek op naam..." oninput="filterPokemon()">
  <form action="/pokedex" method="get"> 
    <select class="sort-select" name="sortField">
        <option class="sort-option" value="name" <%= sortField === 'name' ? 'selected' : '' %>>Naam</option>
        <option class="sort-option" value="id" <%= sortField === 'id' ? 'selected' : '' %>>id</option>
    </select>
    <select class="sort-select" name="sortDirection">
        <option class="sort-option" value="asc" <%= sortDirection === 'asc' ? 'selected' : '' %>>oplopend</option>
        <option class="sort-option" value="desc" <%= sortDirection === 'desc' ? 'selected' : '' %>>aflopend</option>
    </select>
    <button type="submit">Sorteren</button>
</form>
</section>
  <section class="flex-container" style="  
  width: 90%;
  height: 600px;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-animation:slide-in-bck-center .7s cubic-bezier(.25,.46,.45,.94) both;animation:slide-in-bck-center .7s cubic-bezier(.25,.46,.45,.94) both">
    <% for(let pokemon of pokemons) { %>
    <article class="pokemon" >
      <p><%= pokemon.name %></p>
      <p>id: <%= pokemon.id %></p>
      <section>
        <a href="/pokemon/info/<%= pokemon.id %>">
          <img src="<%= pokemon.image %>" alt="img" style="scale: 1.3;"/>
        </a>
      </section>
      <!-- <a href="/pokemon/info/<%= pokemon.id %>">
        <button type="submit">INFO</button>
      </a> -->
    </article>
    <% } %>
  </section>
</main>
<%- include('partials/footer'); %>
